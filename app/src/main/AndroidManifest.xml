<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BLS">
        <!-- Splash Screen como actividad principal -->
        <activity
            android:name=".screens.splash.SplashActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.BLS">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Login Activity -->
        <activity
            android:name=".screens.auth.LoginActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.BLS" />

        <!-- Nueva Actividad Principal de NavegaciÃ³n -->
        <activity
            android:name=".MainScreenActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.BLS" />

        <!-- Empresa Activity (Vista de Unidades) -->
        <activity
            android:name=".screens.empresa.EmpresaActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.BLS" />
        
        <!-- Detalle de Unidad (Vista de Subcarpetas) -->
        <activity
            android:name=".screens.empresa.UnidadDetailActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.BLS" />

        <!-- Detalle de Subcarpeta -->
        <activity
            android:name=".screens.empresa.SubcarpetaDetailActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.BLS" />

        <!-- Administrador Activity -->
        <activity
            android:name=".screens.admin.AdministradorActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.BLS" />

        <!-- Estudiante Activity -->
        <activity
            android:name=".screens.estudiante.EstudianteActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.BLS" />

        <!-- Profesor Activity -->
        <activity
            android:name=".screens.profesor.ProfesorActivity"
            android:exported="false"
            android:label="@string/app_name"
            android:theme="@style/Theme.BLS" />
    </application>

</manifest>